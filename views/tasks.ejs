<h1>Tâches</h1>
<ul>
  <% tasks.forEach(task => { %>
    <li>
      <%= task.title %> <% if(task.done){ %>✔<% } %>
    </li>
  <% }) %>
</ul>
<h2>Nombre total de tâches : <%= total %></h2>
<form action="/api/tasks" method="post">
  <input type="text" name="title" placeholder="Titre de la tâche" required>
  <button type="submit">Ajouter</button>
</form>


